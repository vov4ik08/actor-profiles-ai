APP_NAME="Actor Profile AI"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Docker compose MySQL defaults (see docker-compose.yml)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=actor_profile_ai
DB_USERNAME=actor
DB_PASSWORD=secret

# Minimal dev defaults (avoid extra DB tables for cache/queues):
CACHE_STORE=file
QUEUE_CONNECTION=sync

SESSION_DRIVER=cookie

# OpenAI (set here or export in shell; docker-compose forwards it to app)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

